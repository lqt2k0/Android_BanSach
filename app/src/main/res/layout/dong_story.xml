<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/containerStory"
        android:layout_width="0dp"
        android:layout_height="135dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/container_bg"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgSachStory"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pic1"></ImageView>

    <TextView
        android:id="@+id/tvTenSachStory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:maxLength="30"
        android:text="TextView"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imgSachStory"
        app:layout_constraintTop_toTopOf="@+id/containerStory" />

    <TextView
        android:id="@+id/tvTenTacGiaStory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="NhÃ£ Nam Bookstore"
        app:layout_constraintStart_toEndOf="@+id/imgSachStory"
        app:layout_constraintTop_toBottomOf="@+id/tvTenSachStory" />

    <RatingBar
        style="?android:attr/ratingBarStyleSmall"
        android:id="@+id/ratingBarStory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintStart_toEndOf="@+id/imgSachStory"
        app:layout_constraintTop_toBottomOf="@+id/tvTenTacGiaStory" />

    <TextView
        android:id="@+id/tvScoreStory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="4.5"
        app:layout_constraintBottom_toBottomOf="@+id/ratingBarStory"
        app:layout_constraintStart_toEndOf="@+id/ratingBarStory"
        app:layout_constraintTop_toTopOf="@+id/ratingBarStory"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/tvGiaBanStory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/imgSachStory"
        app:layout_constraintTop_toBottomOf="@+id/ratingBarStory" />

    <ImageView
        android:id="@+id/imageViewStory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="@+id/containerStory"
        app:layout_constraintTop_toTopOf="@+id/containerStory"
        app:srcCompat="@drawable/ic_favorite" />
</androidx.constraintlayout.widget.ConstraintLayout>