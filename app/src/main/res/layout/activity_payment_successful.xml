<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="activity.PaymentSuccessful">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarCart"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"

        android:layout_alignParentEnd="true"
        android:layout_marginEnd="0dp"
        android:background="@color/red"
        app:title="Paymemt Successful"
        app:titleTextColor="@color/white"></androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbarCart"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:background="#F15F54"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="55dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="55dp"
            android:layout_marginBottom="250dp"
            android:src="@drawable/check"></ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="-1dp"
            android:layout_marginTop="250dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="251dp"
            android:gravity="center"
            android:shadowColor="@color/red"
            android:shadowDx="0.0"
            android:shadowDy="0.0"
            android:shadowRadius="15.0"
            android:text="PAYMENT SUCCESSFUL"
            android:textColor="@color/white"
            android:textSize="50dp"
            android:textStyle="bold">

        </TextView>

        <Button

            android:id="@+id/btnHomePS"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="30dp"
            android:layout_marginBottom="50dp"
            android:drawableLeft="@drawable/ic_home"
            android:background="@drawable/giaodien2"
            android:text="HOME"
            app:layout_constraintStart_toStartOf="parent"></Button>

        <Button
            android:id="@+id/btnContactPS"
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="50dp"
            android:background="@drawable/giaodien2"
            android:drawableLeft="@drawable/ic_phone"
            android:text="CONTACT US"></Button>
    </RelativeLayout>

</RelativeLayout>