<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/red"
    tools:context=".RegisterActivity">
<!--    <include-->
<!--        android:id="@+id/toolBar"-->
<!--        layout = "@layout/bar_layout">-->
<!--    </include>-->
    <TextView
        android:id="@+id/tvReateAcc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="CREATE ACCOUNT"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <EditText
        android:id="@+id/etEmail"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/giaodienedtwhite"
        android:drawableLeft="@drawable/email_icon"
        android:drawablePadding="10dp"
        android:hint="Email"
        android:inputType="textPersonName"
        android:padding="20dp"
        android:textColorHint="@android:color/holo_red_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvReateAcc" />
    <EditText
        android:id="@+id/etUserCreate"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/giaodienedtwhite"
        android:drawableLeft="@drawable/user_icon"
        android:drawablePadding="10dp"
        android:hint="Username"
        android:inputType="textPersonName"
        android:padding="20dp"
        android:textColorHint="@android:color/holo_red_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etEmail" />
    <EditText
        android:id="@+id/etMobile"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/giaodienedtwhite"
        android:drawableLeft="@drawable/ic_contact_phone"
        android:drawablePadding="10dp"
        android:hint="Phone Number"
        android:inputType="number"
        android:padding="20dp"
        android:textColorHint="@android:color/holo_red_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etUserCreate" />
    <EditText
        android:id="@+id/etPassCreate"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/giaodienedtwhite"
        android:drawableLeft="@drawable/key_icon"
        android:drawablePadding="10dp"
        android:hint="Password"
        android:inputType="numberPassword"
        android:padding="20dp"
        android:textColorHint="@android:color/holo_red_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etMobile" />
    <EditText
        android:id="@+id/etPassConCreate"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/giaodienedtwhite"
        android:drawableLeft="@drawable/key_icon"
        android:drawablePadding="10dp"
        android:hint="Confirm Password"
        android:inputType="numberPassword"
        android:padding="20dp"
        android:textColorHint="@android:color/holo_red_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etPassCreate" />
    <RadioGroup
        android:layout_marginTop="10dp"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:id="@+id/radioGroup"
        android:background="@drawable/giaodienedtwhite"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etPassConCreate">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Male"
            android:textSize="20dp"
            android:checked="true"
            android:buttonTint="@android:color/holo_red_light"
            android:textColor="@android:color/holo_red_light"
            android:id="@+id/radMale"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Female"
            android:layout_weight="1"
            android:textSize="20dp"
            android:buttonTint="@android:color/holo_red_light"
            android:textColor="@android:color/holo_red_light"
            android:id="@+id/radFemale"/>
    </RadioGroup>
    <Button
        android:id="@+id/btnSignInCreate"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/radioGroup"
        app:layout_constraintStart_toStartOf="@id/radioGroup"
        app:layout_constraintTop_toBottomOf="@id/radioGroup"
        android:layout_marginTop="10dp"
        android:padding="20dp"
        android:backgroundTint="@color/darkred"
        android:text="Sign in"
        android:textColor="#FFFFFF"
        android:textSize="20dp"/>
    <Button
        android:id="@+id/btnCancelCreate"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/btnSignInCreate"
        app:layout_constraintStart_toStartOf="@id/btnSignInCreate"
        app:layout_constraintTop_toBottomOf="@id/btnSignInCreate"
        android:padding="20dp"
        android:backgroundTint="@color/darkred"
        android:text="Cancel"
        android:textColor="#FFFFFF"
        android:textSize="20dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>