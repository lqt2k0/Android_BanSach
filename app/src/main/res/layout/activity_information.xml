<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarInfo"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/red"
        app:title="Information"
        app:titleTextColor="@color/white">
<!--        <Button-->
<!--            android:id="@+id/btnShare"-->
<!--            android:layout_width="45dp"-->
<!--            android:layout_height="50dp"-->
<!--            android:background="@drawable/giaodien3"-->
<!--            android:backgroundTint="@null"-->
<!--            android:backgroundTintMode="@null"-->
<!--            android:gravity="center"-->
<!--            android:textColor="@color/white"-->
<!--            android:textSize="15dp"-->
<!--            android:drawableLeft="@drawable/ic_share"-->
<!--            android:layout_marginStart="220dp">-->
<!--        </Button>-->
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/giaodien2">
        <TextView
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ABOUT US"
            android:textSize="50dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:shadowColor="@color/red"
            android:shadowDx="0.0"
            android:shadowDy="0.0"
            android:shadowRadius="15.0"
            android:textColor="@color/white"
            android:textStyle="bold">
        </TextView>
        <LinearLayout
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:gravity="center">
            <TextView
                android:drawableLeft="@drawable/ic_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="107/x/x Quang Trung, Ward 10, Go Vap District, Ho Chi Minh City, Vietnam"
                android:textSize="18dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:shadowColor="@color/red"
                android:shadowDx="0.0"
                android:shadowDy="0.0"
                android:shadowRadius="15.0"
                android:textColor="@color/white"
                android:textStyle="bold">
            </TextView>
        </LinearLayout>
        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:map="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="30dp"
            tools:context="activity.InformationActivity" />
    </LinearLayout>

</LinearLayout>
