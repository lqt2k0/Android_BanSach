<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp">

    <ImageView
        android:id="@+id/imageViewDB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/pic1" />

    <TextView
        android:id="@+id/tvContentDB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imageViewDB"
        android:layout_alignTop="@+id/imageViewDB"
        android:layout_alignEnd="@+id/imageViewDB"
        android:layout_alignBottom="@+id/imageViewDB"
        android:layout_marginStart="25dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="29dp"
        android:layout_marginBottom="81dp"
        android:text="TextView"
        android:textColor="@color/white"
        android:textSize="20dp" />
</RelativeLayout>